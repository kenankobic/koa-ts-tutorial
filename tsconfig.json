{
  "compilerOptions": {
    "allowJs": true,
    "allowUnusedLabels": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
//    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
//    "strictNullChecks": true,
//    "strict": true,
    "outDir": "./build",
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./dev-repl.ts", 
    "__tests__/**/*"
  ],
}
